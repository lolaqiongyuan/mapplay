mixin doc-bio-card-full(imgBio, videoLink, docTitle, docName, docLang, specialties, conditions, phone, classMod)
  if !classMod
    - classMod = ''

  div(class='doc-bio-full' + classMod)

    div.col-xs-12.col-sm-5.doc-pic
      img(src=imgBio)
      a.camera(href=videoLink)

    div.col-xs-12.col-sm-7.primary-info
      div.aspect-wrapper
        div.height-wrapper
          div.table-wrapper
            div.text-wrapper
              div.eyebrow #{docTitle}
              h3.blue-underline #{docName}
              h4 Speaks: #{docLang}
              div.proof-points.container-fluid
                div.col-sm-4
                  span 11
                  p Years of Experience
                div.col-sm-4
                  span 80+
                  p Types of Conditions Treated
                div.col-sm-4
                  span 48
                  p Published Articles

    div.col-md-7.col-xs-12.secondary-info      
      div.doc-specialties
        div
          span.eyebrow Specialties:
          each val, i in specialties
            if i >= specialties.length - 1
              a(href="#") #{val}
            else
              a(href="#") #{val},

        div
          span.eyebrow Conditions:
          each val, i in conditions
            if i >= specialties.length - 1
              a(href="#") #{val}
            else
              a(href="#") #{val},

      div.make-an-appt
        div.link-wrapper
            a.btn-secondary-white(href="#") Make An Appointment
            div.phone #{phone}

