mixin share-links(facebook, twitter, linkedin, email, print, eng, spa, spaActive, classMod)
  if !classMod
    - classMod = ''

  div(class='share-links' + classMod)
    a.facebook-link(href=facebook) facebook
    a.twitter-link(href=twitter) twitter
    a.linkedin-link(href=linkedin) linkedin
    a.email-link(href=email) email
    a.print-link(href=print) print

    span.language-toggle
      if spaActive
        a(href=eng) eng
        a.selected(href=spa) spa
      else
        a.selected(href=eng) eng
        a(href=spa) spa
